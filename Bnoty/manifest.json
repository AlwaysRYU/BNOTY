{
  "name": "Bnoty",
  "description": "Draw on Web Browser! Coding is bloody fun..",
  "version": "0.5.0",
  "manifest_version": 2,

  "background": {
    "page": "background.html"
  },

  "browser_action": {
    "default_icon": "/images/bnotylogo.png",
    "default_popup": "popup.html"
  },

  "permissions": [ "activeTab", "storage", "scripting", "unlimitedStorage", "tabs", "activeTab", "\u003Call_urls>" ],

  "icons": {  
    "16": "/images/bnotylogo_16.png",
    "38": "/images/bnotylogo_38.png",
    "48": "/images/bnotylogo_48.png",
    "128": "/images/bnotylogo_128.png"
  },

  "options_page": "options.html"
}
